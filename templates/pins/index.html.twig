{% extends 'layouts/base.html.twig' %}

{% block title %}Galerie{% endblock %}

{% block body %}
{% if pins| length > 0 %}
    <h1 class=" mb-4 text-center text-muted"> {{pluralize(pins| length, 'Pin',)}}</h1>
    {% for row in pins|batch(3) %}
        <div class="mb-5 row">
            {% for pin in row %}
            <div class="col-md-4">
                <article class="pin bg-white rounded shadow" >
                    <div class="mw-100 overflow-hidden">
                        <a href="{{path('app_pins_show', {id: pin.id})}}">
                            <img src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('images/placeholder.jpg')) 
                                | imagine_filter('squared_thumbnail_medium') }}" alt="{{ pin.titre }}"
                                class=" w=100 rounded-top" />
                        <a/>
                    
                    </div>
                    
                    
                    <h2 class="h5 pl-3 pt-3" ><a href="{{path('app_pins_show', {id: pin.id})}}" class="h5 text-secondary text-decoration-none ">{{pin.titre}}</a></h2>
                    <p class="pl-3 pb-3 text-muted"><small>Sudmitted-[OWNER-FULL-NAME]</small></p>
                </article>
            </div>
                
            {% endfor %}
        </div>
    {% endfor %}
{% else %}
    <p class="h1 mt-5 text-center"> No pin yet.<a href="{{path('app_pins_create') }}"> Be the first! </a> </p>
{% endif %}

{% endblock %}
